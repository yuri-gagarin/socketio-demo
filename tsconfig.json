{
  "compilerOptions": {
    "module": "Node16",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "inlineSourceMap": true
  },
  "include": ["src/**/*"],
  "ts-node": {
      "esm": true
  },
  "lib": ["esnext"]
}